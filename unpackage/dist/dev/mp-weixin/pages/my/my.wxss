.user-box {
  height: 100%;
  background-color: #eee;
}
.user-box .top-box {
  box-sizing: border-box;
  height: 350rpx;
  width: 95vw;
  margin: 0 auto;
  background: #dedede;
  padding: 0 30rpx;
  position: relative;
  display: flex;
  align-items: center;
}
.user-box .top-box .group {
  z-index: 10;
  color: #fff;
}
.user-box .top-box .group .userinfo {
  display: flex;
  align-items: center;
}
.user-box .top-box .group .userinfo .avatar-box {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  overflow: hidden;
  border: 2px solid #fff;
}
.user-box .top-box .group .userinfo .avatar-box image {
  width: 100%;
  height: 100%;
}
.user-box .top-box .group .userinfo .text {
  padding-left: 20rpx;
}
.user-box .top-box .group .userinfo .text .nickname {
  font-size: 44rpx;
  font-weight: 600;
}
.user-box .top-box .group .userinfo .text .year {
  font-size: 26rpx;
  opacity: 0.6;
  padding-top: 5rpx;
}
.user-box .top-box .bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  overflow: hidden;
}
.user-box .top-box .bg image {
  width: 100%;
  height: 100%;
  -webkit-filter: blur(20px);
          filter: blur(20px);
  -webkit-transform: scale(2);
          transform: scale(2);
  opacity: 0.5;
}
.user-box .main {
  width: 90vw;
  margin: 0 auto;
  background: #fff;
  border-radius: 30rpx;
  -webkit-transform: translateY(-80rpx);
          transform: translateY(-80rpx);
  padding: 30rpx 0 0 0;
}
.user-box .main .list {
  padding: 15rpx 30rpx;
  border-bottom: 15rpx solid #f4f4f4;
}
.user-box .main .list .item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 25rpx 0;
  font-size: 36rpx;
  color: #555;
  border-bottom: 1rpx solid #f8f8f8;
}
.user-box .main .list .item .left {
  display: flex;
  align-items: center;
}
.user-box .main .list .item .left .iconfont {
  font-size: 38rpx;
  margin-right: 10rpx;
}

